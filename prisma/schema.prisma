// --- ENUMS: For providing controlled vocabulary ---
enum Role {
  USER
  EMPLOYER
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

enum EmployerStatus {
  ACTIVE
  INACTIVE
  PENDING
  SUSPENDED
}

enum SubscriptionPlan {
  FREE
  BASIC
  PREMIUM
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  APPRENTICESHIP
}

enum ApplicationStatus {
  PENDING
  REVIEWED
  INTERVIEWED
  OFFERED
  REJECTED
  WITHDRAWN
}

enum Proficiency {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}